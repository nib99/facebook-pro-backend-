
# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/facebook-pro

# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/facebook-pro?retryWrites=true&w=majority

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate a secure random string (min 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-please-make-it-at-least-32-characters-long

JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ============================================
# CLOUDINARY CONFIGURATION
# ============================================
# Sign up at https://cloudinary.com to get credentials
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# CLIENT CONFIGURATION
# ============================================
CLIENT_URL=http://localhost:3000

# For production:
# CLIENT_URL=https://yourdomain.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@facebook-pro.com

# For Gmail, use App Password: https://support.google.com/accounts/answer/185833

# ============================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_SECRET=your-session-secret-change-this-to-random-string

# ============================================
# AGORA CONFIGURATION (Optional - for video calls)
# ============================================
# Sign up at https://www.agora.io
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# ============================================
# AWS S3 CONFIGURATION (Optional - alternative to Cloudinary)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# ============================================
# STRIPE CONFIGURATION (Optional - for payments)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=admin@facebook-pro.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ============================================
# ANALYTICS (Optional)
# ============================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_VIDEO_CALLS=true
ENABLE_LIVE_STREAMING=true
ENABLE_MARKETPLACE=true
ENABLE_GROUPS=true
ENABLE_EVENTS=true
ENABLE_STORIES=true

# ============================================
# SECURITY SETTINGS
# ============================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# ============================================
# PAGINATION DEFAULTS
# ============================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
